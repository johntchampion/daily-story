<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Story</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <div class="container">
        <h1>Daily Story</h1>
        <p class="subtitle">Read a daily story in the language you're learning at your skill level.</p>

        <form id="storyForm">
            <div class="form-group">
                <label for="language">Select Language</label>
                <select id="language" name="language" required>
                    <option value="">Choose a language...</option>
                    <% languages.forEach(lang => { %>
                        <option value="<%= lang.toLowerCase() %>"><%= lang %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="level">Select Skill Level</label>
                <select id="level" name="level" required>
                    <option value="">Choose a level...</option>
                    <optgroup label="Early Levels (Conversations)">
                        <% earlyLevels.forEach(level => { %>
                            <option value="<%= level.toLowerCase() %>"><%= level %></option>
                        <% }) %>
                    </optgroup>
                    <optgroup label="Intermediate Levels (Stories)">
                        <% intermediateLevels.forEach(level => { %>
                            <option value="<%= level.toLowerCase() %>"><%= level %></option>
                        <% }) %>
                    </optgroup>
                </select>
                <p class="level-info">Early levels show conversations, intermediate levels show stories</p>
            </div>

            <button type="submit" class="submit-btn">Get Today's Story</button>
        </form>
    </div>

    <script>
        document.getElementById('storyForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const language = document.getElementById('language').value;
            const level = document.getElementById('level').value;

            if (language && level) {
                window.location.href = `/${language}/${level}`;
            }
        });
    </script>
</body>
</html>
